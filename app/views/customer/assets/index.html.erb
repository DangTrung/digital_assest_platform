<h1 class="mb-4">Available Assets</h1>

<div class="row">
  <% @assets.each do |asset| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= asset.title %></h5>
          <p class="card-text"><%= asset.description.truncate(100) %></p>
          <p class="mt-auto"><strong>Price:</strong> $<%= asset.price %></p>
        </div>
        <div class="card-footer bg-transparent border-top-0">
          <%= form_with url: quick_add_purchase_items_path, method: :post, remote: true, class: "d-inline" do |f| %>
            <%= f.hidden_field :quantity, value: 1 %>
            <%= f.hidden_field :asset_id, value: asset.id %>
            <%= f.button :submit, class: "btn btn-outline-orange w-100" do %>
              <i class="fas fa-shopping-bag"></i> Add to Cart
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
