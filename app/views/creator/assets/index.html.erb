<div class="shadow-lg p-3 mb-5 bg-white rounded">
  <h1 class="text-center">All Assets</h1>

  <%= link_to 'New Asset', new_creator_asset_path, class: 'btn btn-primary' %>

  <table class="table shadow rounded">
    <thead scope="row">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @assets.each do |asset| %>
        <tr>
          <td class="rounded m-3"><%= asset.title %></td>
          <td class="rounded m-3"><%= asset.description %></td>
          <td class="rounded m-3"><%= asset.price %></td>
          <td class="rounded m-3">
            <%= link_to 'Show', creator_asset_path(asset), class: 'btn btn-info' %>
            <%= link_to 'Edit', edit_creator_asset_path(asset), class: 'btn btn-warning' %>
            <%= link_to 'Delete', creator_asset_path(asset), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
