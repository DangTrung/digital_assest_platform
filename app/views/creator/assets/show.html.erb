<h1 class="text-center my-4">Asset Details</h1>

<!-- Center the content inside a shadow box -->
<div class="container d-flex justify-content-center">
  <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%;"> <!-- Set max-width for responsiveness -->
    
    <!-- Asset Title -->
    <p><strong>Title:</strong> <%= @asset.title %></p>

    <!-- Asset Description -->
    <p><strong>Description:</strong> <%= @asset.description %></p>

    <!-- Asset Price -->
    <p><strong>Price:</strong> <%= @asset.price %></p>

    <!-- Asset File URL -->
    <% if @asset.file_url.present? %>
      <p><strong>File URL:</strong> <%= link_to @asset.file_url, @asset.file_url, target: "_blank", class: 'text-primary' %></p>
    <% else %>
      <p><strong>File URL:</strong> Not available</p>
    <% end %>

    <!-- Edit and Back Buttons -->
    <div class="d-flex justify-content-between">
      <%= link_to 'Edit', edit_creator_asset_path(@asset), class: 'btn btn-warning' %>
      <%= link_to 'Back', creator_assets_path, class: 'btn btn-secondary' %>
    </div>
    
  </div>
</div>
